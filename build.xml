<project name="fjdbc" default="jar">
	<property name="buildDir" value="build" />
	<property name="jarName" value="fjdbc.jar" />

	<target name="clean">
		<delete dir="${buildDir}" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="${buildDir}/classes" />
		<javac srcdir="src" destdir="${buildDir}/classes" />
	</target>

	<target name="jar" depends="compile">
		<mkdir dir="${buildDir}" />
		<jar destfile="${buildDir}/${jarName}" basedir="${buildDir}/classes">
		</jar>
	</target>
</project>